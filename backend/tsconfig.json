{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "lib": ["es2018"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    /* ‚Üê enable full strict type-checking */
   

    /* Nest decorators support */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Speed/type-safety helpers */
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
